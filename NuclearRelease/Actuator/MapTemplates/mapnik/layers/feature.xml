<Layers>
    <Layer name="${featureInfo['name']}" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over" status="1" clear_label_cache="on">
        <Datasource>
            <Parameter name="type">postgis</Parameter>
            <Parameter name="user">${featureInfo['user']}</Parameter>
            <Parameter name="dbname">${featureInfo['dbname']}</Parameter>
            <Parameter name="estimate_extent">false</Parameter>
            <Parameter name="extent">-20037508,-19929239,20037508,19929239</Parameter>
            <Parameter name="host">${featureInfo['host']}</Parameter>
            <Parameter name="password">${featureInfo['password']}</Parameter>
            <Parameter name="port">${featureInfo['port']}</Parameter>
            <Parameter name="table">(select geom, label from geo_contents where name='${featureInfo['name']}') as ${featureInfo['layername']}</Parameter>
        </Datasource>
    </Layer>
</Layers>