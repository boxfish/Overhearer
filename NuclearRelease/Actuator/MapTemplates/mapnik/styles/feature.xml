<Styles>
    <Style name="epz-2">
        <Rule>
            <PolygonSymbolizer>
                <CssParameter name="fill">rgb(212,154,4)</CssParameter>
                <CssParameter name="fill-opacity">0.7</CssParameter>
            </PolygonSymbolizer>
            <LineSymbolizer>
                <CssParameter name="stroke">rgb(211,43,28)</CssParameter>
                <CssParameter name="stroke-width">2.5</CssParameter>
                <CssParameter name="stroke-opacity">0.8</CssParameter>
                <CssParameter name="stroke-dasharray">4, 2</CssParameter>
            </LineSymbolizer>
            <TextSymbolizer name="label" fontset_name="oblique-fonts" size="10" fill="rgb(255,4,0)" halo_radius="1" placement="line"></TextSymbolizer>
        </Rule>
    </Style>
