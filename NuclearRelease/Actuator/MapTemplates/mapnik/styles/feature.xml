            </PolygonSymbolizer>
        </Rule>
    </Style>
    <Style name="nuclear_station">
        <Rule>            
            <PointSymbolizer file="${mapnik_template_dir}/symbols/red-arrow.png" type="png" width="16" height="16" allow_overlap="true"></PointSymbolizer>
            <TextSymbolizer name="label" fontset_name="oblique-fonts" size="10" fill="rgb(255,4,0)" halo_radius="1" placement="point" dy="20" dx="50"></TextSymbolizer>
        </Rule>
    </Style>
    <Style name="highlight">
        <Rule>
            <LineSymbolizer>
                <CssParameter name="stroke">rgb(211,43,28)</CssParameter>
                <CssParameter name="stroke-width">4</CssParameter>
