    <Style name="epz">
        <Rule>
            <PolygonSymbolizer>
                <CssParameter name="fill">rgb(212,154,4)</CssParameter>
                <CssParameter name="fill-opacity">0.8</CssParameter>
            </PolygonSymbolizer>
            <LineSymbolizer>
                <CssParameter name="stroke">rgb(211,43,28)</CssParameter>
                <CssParameter name="stroke-width">1.5</CssParameter>
